TFILE="$(basename $0).$$.tmp"
mkdir -p profiles/
/home/benb/dev/graphics/zrenderdoc/bin/renderdoccmd capture -d . -c profiles/$TFILE -w build/city && /home/benb/dev/graphics/zrenderdoc/bin/qrenderdoc profiles/$TFILE*

while true; do
    read -p "Do you want to keep this profile? " yn
    case $yn in
        [Yy]* ) mkdir -p profiles/saved; mv profiles/$TFILE* profiles/saved/; break;;
        [Nn]* ) rm profiles/$TFILE*; exit;;
        * ) echo "Please answer yes or no.";;
    esac
done
